<?xml version="1.0"?>
<robot name="sirdigsalot">
  <link name="base_link">
    <visual>
      <geometry>
        <box size=".4572 .8636 .1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size=".4572 .8636 .1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia
        ixx="0.0" ixy="0.0" ixz="0.0"
        iyy="0.0" iyz="0.0"
        izz="0.0"/>
    </inertial>
  </link>

  <link name="right_front_wheel">
    <visual>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </collision>
    <inertial>
      <origin rpy="0 1.57075  0"/>
      <mass value="1"/>
      <inertia
        ixx="0.0" ixy="0.0" ixz="0.0"
        iyy="0.0" iyz="0.0"
        izz="0.0"/>
    </inertial>
  </link>

  <link name="left_front_wheel">
    <visual>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </collision>
    <inertial>
      <origin rpy="0 1.57075 0"/>
      <mass value="1"/>
      <inertia
        ixx="0.0" ixy="0.0" ixz="0.0"
        iyy="0.0" iyz="0.0"
        izz="0.0"/>
    </inertial>
  </link>

  <link name="right_back_wheel">
    <visual>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </collision>
    <inertial>
      <origin rpy="0 1.57075 0"/>
      <mass value="1"/>
      <inertia
        ixx="0.0" ixy="0.0" ixz="0.0"
        iyy="0.0" iyz="0.0"
        izz="0.0"/>
    </inertial>
  </link>

  <link name="left_back_wheel">
    <visual>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length=".0635" radius="0.1016"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
    </collision>
    <inertial>
      <origin rpy="0 1.57075 0"/>
      <mass value="1"/>
      <inertia
        ixx="0.0" ixy="0.0" ixz="0.0"
        iyy="0.0" iyz="0.0"
        izz="0.0"/>
    </inertial>
  </link>

  <joint name="base_to_right_front_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_front_wheel"/>
    <axis xyz="1 0 0"/>
    <origin xyz=".2667 .365125 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <joint name="base_to_left_front_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_front_wheel"/>
    <axis xyz="1 0 0"/>
    <origin xyz="-.2667 .365125 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <joint name="base_to_right_back_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_back_wheel"/>
    <axis xyz="1 0 0"/>
    <origin xyz=".2667 -.365125 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <joint name="base_to_left_back_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_back_wheel"/>
    <axis xyz="1 0 0"/>
    <origin xyz="-.2667 -.365125 0"/>
    <dynamics damping="0.7"/>
  </joint>

  <!-- fake joints because the virtual actuator joints need children -->
  <link name="dump_end">
  </link>
  <link name="ladder_end">
  </link>

  <joint name="dump" type="prismatic">
    <parent link="base_link"/>
    <child link="dump_end"/>
    <limit upper="0.20" effort="90" velocity="1000"/>
  </joint>
  <joint name="ladder" type="prismatic">
    <parent link="base_link"/>
    <child link="ladder_end"/>
    <limit upper="0.20" effort="90" velocity="1000"/>
  </joint>

  <!-- http://gazebosim.org/tutorials?tut=ros_gzplugins -->
  <gazebo>
    <plugin name="imu_plugin" filename="libgazebo_ros_imu.so">
      <alwaysOn>true</alwaysOn>
      <bodyName>base_link</bodyName>
      <topicName>imu</topicName>
      <serviceName>imu_service</serviceName>
      <gaussianNoise>0.0</gaussianNoise>
      <updateRate>20.0</updateRate>
    </plugin>
    <!--
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/sirdigsalot</robotNamespace>
    </plugin>
    -->
    <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
      <updateRate>100</updateRate>
      <robotNamespace>/sirdigsalot</robotNamespace>
      <leftFrontJoint>base_to_left_front_wheel</leftFrontJoint>
      <rightFrontJoint>base_to_right_front_wheel</rightFrontJoint>
      <leftRearJoint>base_to_left_back_wheel</leftRearJoint>
      <rightRearJoint>base_to_right_back_wheel</rightRearJoint>
      <wheelSeparation>0.5334</wheelSeparation>
      <wheelDiameter>0.20232</wheelDiameter>
      <robotBaseFrame>base_link</robotBaseFrame>
      <torque>20</torque>
      <commandTopic>cmd_vel</commandTopic>
      <broadcastTF>false</broadcastTF>
    </plugin>
  </gazebo>

</robot>
